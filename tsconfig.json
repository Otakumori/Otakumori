{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "ignoreDeprecations": "5.0",
    "baseUrl": ".",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noUncheckedIndexedAccess": false,
    "exactOptionalPropertyTypes": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "jsxImportSource": "react",
    "incremental": true,
    "tsBuildInfoFile": ".cache/tsbuildinfo.json",
    "allowImportingTsExtensions": true,
    "types": ["node", "jest"],
    "typeRoots": ["./node_modules/@types", "./types"],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@/lib/*": ["./lib/*", "./app/lib/*"],
      "@om/avatar": ["./packages/avatar/src/index.ts"],
      "@om/avatar/*": ["./packages/avatar/src/*"],
      "@om/avatar-engine": ["./packages/avatar-engine/src/index.ts"],
      "@om/avatar-engine/*": ["./packages/avatar-engine/src/*"],
      "@om/game-kit": ["./packages/game-kit/src/index.ts"],
      "@om/game-kit/*": ["./packages/game-kit/src/*"],
      "@om/ecs": ["./packages/ecs/src/index.ts"],
      "@om/ecs/*": ["./packages/ecs/src/*"],
      "@om/shaders": ["./packages/shaders/src/index.ts"],
      "@om/shaders/*": ["./packages/shaders/src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "types/**/*.d.ts"],
  "exclude": [
    "node_modules",
    "scripts/**",
    "dist/**",
    ".next/**",
    "__tests__/**",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}
