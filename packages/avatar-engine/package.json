{
  "name": "@om/avatar-engine",
  "version": "0.0.0",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./gameIntegration": {
      "types": "./src/gameIntegration/index.ts",
      "import": "./dist/gameIntegration/index.js",
      "require": "./dist/gameIntegration/index.cjs"
    },
    "./materials": {
      "types": "./src/materials/index.ts",
      "import": "./dist/materials/index.js",
      "require": "./dist/materials/index.cjs"
    },
    "./renderer": {
      "types": "./src/renderer/index.ts",
      "import": "./dist/renderer/index.js",
      "require": "./dist/renderer/index.cjs"
    }
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsup src/index.ts src/gameIntegration/index.ts src/materials/index.ts src/renderer/index.ts --format esm,cjs --clean --external react --external react-dom --external three --external @react-three/fiber --external @react-three/drei --external @om/ecs --external @om/game-kit",
    "type-check": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint . --max-warnings=0",
    "test": "vitest run"
  },
  "dependencies": {},
  "peerDependencies": {
    "@om/ecs": "workspace:*",
    "@om/game-kit": "workspace:*",
    "@react-three/drei": "^10.7.6",
    "@react-three/fiber": "^9.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "three": "^0.180.0"
  },
  "devDependencies": {
    "@om/ecs": "workspace:*",
    "@om/game-kit": "workspace:*",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^18.3.26",
    "@types/three": "^0.180.0",
    "tsup": "^8.0.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
